{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "EnableAICentralSummaryWebPage": false,
  "AICentral": {
    "Endpoints": [
      {
        "Type": "AzureOpenAIEndpoint",
        "Name": "apimAiGateway",
        "Properties": {
          "LanguageEndpoint": "",
          "AuthenticationType": "bearerPlusSubscriptionKey"
        }
      }
    ],
    "AuthProviders": [
      {
        "Type": "Entra",
        "Name": "azure-open-ai-token-checker",
        "Properties": {
          "Entra": {
            "ClientId": "https://cognitiveservices.azure.com",
            "TenantId": "",
            "Instance": "https://login.microsoftonline.com/",
            "Audience": "https://cognitiveservices.azure.com"
          }
        }
      }
    ],
    "BackendAuthorisers": [
      {
        "Type": "BearerPlusKey",
        "Name": "bearerPlusSubscriptionKey",
        "Properties": {
          "IncomingClaimName": "appid",
          "KeyHeaderName": "backend-apim-subscription-key",
          "SubjectToKeyMappings": {
          }
        }
      }
    ],
    "GenericSteps": [
    ],
    "EndpointSelectors": [
      {
        "Type": "SingleEndpoint",
        "Name": "apimAiGatewayProxy",
        "Properties": {
          "Endpoint": "apimAiGateway"
        }
      }
    ],
    "Pipelines": [
      {
        "Name": "apimAiGatewayProxy",
        "Host": "*",
        "EndpointSelector": "apimAiGatewayProxy",
        "AuthProvider": "azure-open-ai-token-checker",
        "Steps": [
        ],
        "OpenTelemetryConfig": {
          "Transmit": true,
          "AddClientNameTag": true
        }
      }
    ]
  }
}
